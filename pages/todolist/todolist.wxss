.ipt-box{
  width:100%;
  height: 40px;
  display: flex;
}
.ipt-box input{
  flex: 1;
  height: 100%;
  background: #eee;
  margin-left: 1%;
  padding-left: 3%;
}
.ipt-box button{
  width: 50px;
  background: #eee;
  margin: 2%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.head{
  width: 100%;
  height: 60px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 23px;
  color: red;
}
.nav{
  width: 100%;
  height: 30px;
  display: flex;
}
.nav text{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.nav text.active{
  color: palegreen;
  font-weight: bold;
}
.item{
  width: 96%;
  height: 60rpx;
  margin: 2% 5%;
}